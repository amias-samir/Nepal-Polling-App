            </RelativeLayout>

            <!--monthly salary details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/monthly_salary_question_16"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=" १६. मासिक आय*" />

                <Spinner

                    android:id="@+id/monthly_salary_Spinner"
                    android:layout_width="300dp"
