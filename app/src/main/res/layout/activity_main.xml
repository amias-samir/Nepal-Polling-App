                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/resident_question_13"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="१३. बास स्थान*" />

                <Spinner

                    android:id="@+id/resident_Spinner"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/resident_question_13"
