<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/content_margin">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevetation_low">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="@dimen/content_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--age details-->
            <RelativeLayout

                android:layout_marginTop="10dp"
                android:id="@+id/relativeLayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/age_question_1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="१. तपाईंको उमेर कती होला?*" />

                <Spinner

                    android:id="@+id/age_Spinner"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/age_question_1"
                    android:layout_toRightOf="@+id/age_question_1"
                    android:layout_width="220dp" />


            </RelativeLayout>



            <!--sex details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/age_question_2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="२. तपाईंको लिङ्ग के हो?*" />

                <Spinner

                    android:id="@+id/sex_Spinner"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/age_question_2"
                    android:layout_toRightOf="@+id/age_question_2" />

            </RelativeLayout>




            <!--religion details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/religion_question_3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="३. तपाईंको धर्म के हो?*" />

                <Spinner

                    android:id="@+id/religion_Spinner"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/religion_question_3"
                    android:layout_toRightOf="@+id/religion_question_3" />

            </RelativeLayout>


            <!--cast details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/cast_question_4"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="४. तपाईंको जाति के हो?*" />

                <Spinner

                    android:id="@+id/cast_Spinner"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/cast_question_4"
                    android:layout_toRightOf="@+id/cast_question_4"
                    android:layout_width="220dp" />


            </RelativeLayout>

            <!--vote to candidates of any political party details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/vote_question_5"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="५. कुन पार्टीको उमेवारलाई मतदान गर्नुहुन्छ?*" />

                <Spinner

                    android:id="@+id/vote_Spinner"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/vote_question_5"
                    android:layout_toRightOf="@+id/vote_question_5" />

            </RelativeLayout>




        <!--vote in next election details-->
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:id="@+id/relativeLayout_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                android:id="@+id/next_election_vote_question_6"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="६. तपाईं आगामी स्थानीय निर्वाचनमा मतदान गर्ने योजना छ?*" />

            <Spinner

                android:id="@+id/vote_in_next_election_Spinner"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/next_election_vote_question_6"
                android:layout_toRightOf="@+id/next_election_vote_question_6" />

        </RelativeLayout>


            <!--country movement details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/country_question_7"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="७. के तपाईंलाई देश सही दिशामा जाँदै छ लाग्छ?*" />

                <Spinner

                    android:id="@+id/country_Spinner"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/country_question_7"
                    android:layout_toRightOf="@+id/country_question_7"
                    android:layout_width="220dp" />


