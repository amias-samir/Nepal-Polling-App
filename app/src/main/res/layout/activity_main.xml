            </RelativeLayout>


            <!--Nepal's problem details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/nepal_problem_question_10"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="१०. तपाईंको बिचारमा नेपालको सबैभन्दा महत्वोपूर्ण समस्या के हो?*" />

                <Spinner

                    android:id="@+id/nepal_problem_Spinner"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/nepal_problem_question_10"
                    android:layout_toRightOf="@+id/nepal_problem_question_10"
                    android:layout_width="220dp" />


            </RelativeLayout>

            <!--wants talk to your political leader details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/talk_to_political_leader_question_11"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="११. तपाईं पार्टी को मुख्य नेता बीच एक बहस रुचाउनुहुन्छ?*" />

                <Spinner

                    android:id="@+id/talk_political_leader_Spinner"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/talk_to_political_leader_question_11"
                    android:layout_toRightOf="@+id/talk_to_political_leader_question_11" />

            </RelativeLayout>

            <!-- recent prime minister evaluation  details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/prime_minister_evaluation_question_12"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="१२. तपाईं वर्तमान प्रधानमन्त्री प्रचन्डको कार्यकाल कसरी मूल्याङ्कन गर्नु हुन्छ?*" />

                <Spinner

                    android:id="@+id/evaluation_pm_Spinner"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/prime_minister_evaluation_question_12"
                    android:layout_toRightOf="@+id/prime_minister_evaluation_question_12" />

            </RelativeLayout>





            <!--resident  details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_13"
                android:layout_width="match_parent"
