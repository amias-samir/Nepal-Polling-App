            </RelativeLayout>

            <!--birth  details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/birth_question_14"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="१४. जन्म स्थान*" />

                <Spinner

                    android:id="@+id/birth_Spinner"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/birth_question_14"
                    android:layout_toRightOf="@+id/birth_question_14" />

            </RelativeLayout>

            <!--origin details-->
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:id="@+id/origin_question_15"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="१५. तपाईं आफूलाई कुन मूलको ठान्नु हुन्छ?*" />

                <Spinner

                    android:id="@+id/origin_Spinner"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
