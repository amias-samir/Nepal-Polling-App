<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakhati.nepalpollingapp.activities.AboutUsActivity"
    android:background="@color/white">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/datanepal_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered By : "
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"/>


        <ImageButton
            android:id="@+id/datanepal_img"
            android:layout_below="@+id/datanepal_lbl"
            android:layout_width="277dp"
            android:layout_height="88dp"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:src="@drawable/datanepal_logo"
            android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_below="@+id/datanepal_img"
                android:id="@+id/naxa_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed By : "
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"/>


            <ImageButton
                android:layout_below="@+id/naxa_lbl"
                android:layout_width="277dp"
                android:layout_height="88dp"
                android:scaleType="fitXY"
                android:background="@drawable/naxa_logo"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
